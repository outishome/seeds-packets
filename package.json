{
  "name": "@sproutsocial/seeds-packets",
  "version": "0.4.0",
  "description": "Design tokens for Sprout Social's design system, Seeds.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sproutsocial/seeds-packets.git"
  },
  "author": "Sprout Social, Inc.",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packets/*"
    ],
    "nohoist": [
      "**/@sproutsocial/seeds-*"
    ]
  },
  "scripts": {
    "format:prettier": "prettier-eslint --write --eslint-ignore --print-width=120 --single-quote --no-bracket-spacing",
    "build": "lerna run build",
    "clean": "lerna run clean"
  },
  "lint-staged": {
    "**/*.js": [
      "yarn run format:prettier"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "husky": "^2.3.0",
    "lerna": "^5.4.3",
    "lint-staged": "^9.5.0",
    "lodash.upperfirst": "^4.3.1",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0"
  },
  "resolutions": {
    "lodash": "^4.17.21",
    "parse-url": "^7.0.2",
    "@lerna/conventional-commits": "^4.0.0",
    "globby": "^10.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS || (echo \"\nRead about commit message formatting here: https://github.com/sproutsocial/seeds-packets#committing-changes\" && exit 1)",
      "pre-commit": "lint-staged"
    }
  }
}
