{
  "name": "@sproutsocial/seeds-packets",
  "private": true,
  "version": "0.4.0",
  "description": "Design tokens for Sprout Social's design system, Seeds.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sproutsocial/seeds-packets.git"
  },
  "author": "Sprout Social, Inc.",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@sproutsocial/seeds-*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier-eslint --write --eslint-ignore --print-width=120 --single-quote --no-bracket-spacing",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "ci:release": "turbo build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "husky": "^2.3.0",
    "lint-staged": "^9.5.0",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "turbo": "^1.4.6"
  },
  "resolutions": {
    "lodash": "^4.17.21",
    "parse-url": "^7.0.2",
    "globby": "^10.0.2"
  }
}
